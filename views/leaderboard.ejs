<!DOCTYPE html>
<html>
  <head>
    <title>Leaderboard | Geoguesser</title>
  </head>
  <body>
    <h1>Leaderboard</h1>
    <table>
      <thead>
        <tr>
          <th>Rank</th>
          <th>Name</th>
          <th>Score</th>
        </tr>
      </thead>
      <tbody id="leaderboardBody">
        <% leaderboard.forEach((user, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= user.name %></td>
          <td><%= user.score %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
